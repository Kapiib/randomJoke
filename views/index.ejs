<!DOCTYPE html>
<html lang="no">
    <%- include('partials/head') %>
<body>
    <div class="container">
        <h1>Tilfeldig Vits</h1>
        
        <!-- Error message container -->
        <div id="error-message" class="error-container" style="display: none;">
            <div class="error-title">Feil</div>
            <p id="error-text"></p>
            <p class="error-action" id="error-action"></p>
        </div>
        
        <div class="joke-container" data-joke-id="<%= joke.id %>">
            <div class="joke-setup" id="joke-setup">
                <%= joke.setup %>
            </div>
            
            <div class="joke-punchline" id="joke-punchline">
                <%= joke.punchline %>
            </div>
        </div>
        
        <div class="rating-container">
            <p>Ranger vitsen:</p>
            <div class="stars" id="stars-container">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
            </div>
            
            <!-- Add thank you message (initially hidden) -->
            <div id="rating-confirmation" class="rating-confirmation hidden">
                <p>✅ Takk for din stemme!</p>
            </div>
            
            <div id="average-rating" class="average-rating hidden">
                <p>Gjennomsnittsvurdering: <span id="avg-value">0</span> (<span id="rating-count">0</span> vurderinger)</p>
            </div>
        </div>
        
        <div class="buttons">
            <button id="new-joke-btn" disabled>Ny Vits</button>
        </div>
        
        <!-- Add link to user guide -->
        <div class="guide-link">
            <a href="/brukerveiledning">Se brukerveiledning</a>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>